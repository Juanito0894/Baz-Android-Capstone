<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16_dp"
        android:layout_marginVertical="@dimen/dimens_16_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/dimens_16_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageId"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_aave"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cry_book_fake"
                android:layout_marginStart="@dimen/dimens_16_dp"
                android:layout_marginTop="@dimen/dimens_12_dp"
                style="@style/subtitle_h1"
                app:layout_constraintStart_toEndOf="@+id/imageId"
                app:layout_constraintTop_toTopOf="@+id/imageId" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dimens_24_dp"
                android:layout_height="@dimen/dimens_24_dp"
                android:layout_marginTop="@dimen/dimens_12_dp"
                app:layout_constraintStart_toStartOf="@+id/txt_book"
                app:layout_constraintTop_toBottomOf="@+id/txt_book"
                app:srcCompat="@drawable/ic_arrow_right"
                tools:ignore="ContentDescription"
                app:tint="@color/orange_pastel" />

            <TextView
                android:id="@+id/txt_book_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cry_book_fake_end"
                style="@style/subtitle_h1"
                android:textColor="@color/orange_pastel"
                android:layout_marginStart="@dimen/dimens_8_dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <ImageView
                android:id="@+id/image_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_circle"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>