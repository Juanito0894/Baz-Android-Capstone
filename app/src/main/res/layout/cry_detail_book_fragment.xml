<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_100"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header_top_bar"
        layout="@layout/cry_header_top_bar_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content_information"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_24_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_top_bar">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="@dimen/dimens_100_dp"
            android:layout_height="@dimen/dimens_100_dp"
            android:layout_marginTop="@dimen/dimens_16_dp"
            android:background="@drawable/background_circle"
            android:elevation="@dimen/dimens_24_dp"
            android:paddingStart="@dimen/dimens_6_dp"
            android:paddingTop="@dimen/dimens_4_dp"
            android:paddingEnd="@dimen/dimens_6_dp"
            android:src="@drawable/ic_aave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_detail"
            style="@style/subtitle_white"
            android:textColor="@color/blue_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cry_detail_book"
            android:layout_marginTop="@dimen/dimens_12_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/book_image"/>

        <ImageView
            android:id="@+id/iv_hide_show_detail"
            android:layout_width="@dimen/dimens_32_dp"
            android:layout_height="@dimen/dimens_32_dp"
            android:layout_marginStart="@dimen/dimens_8_dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@+id/txt_detail"
            app:layout_constraintStart_toEndOf="@id/txt_detail"
            app:layout_constraintTop_toTopOf="@+id/txt_detail"
            app:tint="@color/blue_100"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_one"
            style="@style/subtitle_gray_regular_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cry_last_price"
            android:layout_marginTop="@dimen/dimens_8_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_detail"/>

        <TextView
            android:id="@+id/txt_last_price"
            style="@style/subtitle_blue_bold_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_one" />

        <TextView
            android:id="@+id/txt_two"
            style="@style/subtitle_gray_regular_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cry_highest_price"
            android:layout_marginTop="@dimen/dimens_8_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_last_price"/>

        <TextView
            android:id="@+id/txt_highest_price"
            style="@style/subtitle_blue_bold_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_last_price"
            app:layout_constraintTop_toBottomOf="@id/txt_two" />

        <TextView
            android:id="@+id/txt_three"
            style="@style/subtitle_gray_regular_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cry_highest_price"
            android:layout_marginTop="@dimen/dimens_8_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_highest_price"/>

        <TextView
            android:id="@+id/txt_low_more_low"
            style="@style/subtitle_blue_bold_20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_highest_price"
            app:layout_constraintTop_toBottomOf="@id/txt_three" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content_ask_bids"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimens_12_dp"
        android:background="@drawable/background_rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_content_information">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_12_dp"
            android:padding="@dimen/dimens_8_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_ask"
                style="@style/subtitle_white"
                android:textColor="@color/gray_100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_line"
                android:padding="@dimen/dimens_8_dp"
                android:layout_marginStart="@dimen/dimens_8_dp"
                android:text="@string/cry_txt_ask"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/txt_bids"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_bids"
                style="@style/subtitle_white"
                android:textColor="@color/gray_100"
                android:background="@color/transparent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimens_8_dp"
                android:layout_marginStart="@dimen/dimens_8_dp"
                android:text="@string/cry_txt_bids"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt_ask"
                app:layout_constraintTop_toTopOf="@+id/txt_ask" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ask_bids"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimens_12_dp"
            android:layout_marginHorizontal="@dimen/dimens_16_dp"
            tools:listitem="@layout/cry_ask_item"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_buttons"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_no_information"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_top_bar">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/la_no_information"
            android:layout_width="0dp"
            android:layout_height="400dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens_64_dp"
            android:text="@string/cry_no_information"
            android:textAlignment="center"
            android:textColor="@color/gray_100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/la_no_information" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/id_shimmer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_top_bar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/cry_shimmer_detail_book"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>